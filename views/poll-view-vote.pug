extends ./poll-view-base.pug

block headExtras
  script(src='/js/poll_vote.js')

block jumbotronExtras
  + buttonBar('/results', 'View results', 'btn-success')

block bodyExtras
  form(id='poll-vote', method='post')
    input(type='hidden', name='_csrf', value=csrfToken)
    div(class='list-group', id='poll-answers-container')
      each answer in answers
        button(type='button', class='list-group-item') #{answer}
      input(type='text', class='list-group-item', id='new-answer', name='new-answer', placeholder = 'Your answer here')
    input(type='hidden', name='selected-answer', id='selected-answer' value='')
    div(class='btn-group btn-group-lg btn-group-fw', role='group', aria-label='Form actions')
      button(class='btn btn-default btn-primary btn-submit btn-fw', type='submit') Vote
