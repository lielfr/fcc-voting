extends ./base.pug
block head
  title Polls Made Easy - Vote
  block headExtras

mixin buttonBar(otherActionURL, otherActionText, otherActionClass)
  - var baseURL = '/polls/' + poll._id
  - var otherURL = baseURL + otherActionURL
  - var deleteURL = baseURL + '/delete'
  - var otherClasses = 'btn ' + otherActionClass
  div(class='btn-group btn-group-lg', role='group', aria-label='Poll navigation')
    a(href=otherURL, class=otherClasses, role='button')
      | #{otherActionText}
    if showDelete
      a(href=deleteURL, role='button', class='btn btn-default btn-danger')
        | Delete

block body
  div(class='jumbotron bg-primary text-xs-center')
    h1 #{poll.title}
    p By #{author.displayName}

    block jumbotronExtras
  block bodyExtras
